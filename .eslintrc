{
  "extends": ["standard"],
  "plugins": ["json"],
  "rules": {
    "no-unused-expressions": "off",
    "eqeqeq": "error",
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always",
        "functions": "never"
      }
    ]
  },
  "globals": {
    "it": true,
    "describe": true,
    "expect": true,
    "sinon": true,
    "before": true,
    "beforeEach": true,
    "after": true,
    "afterEach": true,
    "context": true
  }
}
